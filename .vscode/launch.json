{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter local",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "--dart-define=DEBUG=true",
        "--dart-define-from-file=.env.local",
        // "--dart-define-from-file=.env",
      ],
      // "flutterMode": "release",
    },
    {
      "name": "Flutter local release",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "--dart-define=DEBUG=true",
        "--dart-define-from-file=.env.local",
        // "--dart-define-from-file=.env",
      ],
      "flutterMode": "release",
    },
    {
      "name": "Flutter server release",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "--dart-define=DEBUG=true",
        // "--dart-define-from-file=.env.local",
        "--dart-define-from-file=.env",
      ],
      "flutterMode": "release",
    },
    {
      "name": "Dart: current file",
      "type": "dart",
      "request": "launch",
      "program": "${file}"
    },
    {
      "name": "Dart: Run all Tests",
      "type": "dart",
      "request": "launch",
      "program": "./test/"
    },
    {
      "name": "Flutter (profile mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile"
    },
    {
      "name": "Flutter (release mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release"
    }
  ]
}
